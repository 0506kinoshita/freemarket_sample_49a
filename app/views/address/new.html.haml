.devise-wrapper
  .devise-container
    .devise-container-info__header
      = link_to 'https://www.mercari.com/jp/' do
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?570108281', class:'devise-container__header__logo'

        
    %nav.progress
      %ul.progress--clearfix
        %li.done#red-3
          会員情報
          .progress-status-3#red-3
        %li.done#red-3
          電話番号認証
          .progress-status-3#red-3
        %li.address.active
          お届け先住所入力
          .progress-status-3#red-3
        %li.pay
          支払い方法
          .progress-status-3
        %li.finish
          完了
          .progress-status-3

    .sign-up-main
      .sign-up-main__upper
        .sign-up-main__upper__text
          %h2 住所入力

      %form.sign-up-main__address
        = form_with model: @address, url: '/address',method: :post, local: true do |form|
          .sign-up-main__address__zipcode
            = form.label '郵便番号', class: :'sign-up-main__address__zipcode__head'
            = form.label '必須', class: :'sign-up-main__address__zipcode__require'
            = form.text_field :zip_code, placeholder: 'ハイフンなし', value: '', class: :'sign-up-main__address__zipcode__form'

          .sign-up-main__address__prefecture
            = form.label '都道府県', class: :'sign-up-main__address__prefecture__head'
            = form.label '必須', class: :'sign-up-main__address__prefecture__require'
            = form.collection_select :prefecture, Prefecture.all, :id, :name, class: :'sign-up-main__address__prefecture__form'
            = fa_icon("chevron-down")

          .sign-up-main__address__city
            = form.label '市区町村', class: :'sign-up-main__address__city__head'
            = form.label '必須', class: :'sign-up-main__address__city__require'
            = form.text_field :city, placeholder: '例）横浜市港区', class: :'sign-up-main__address__city__form'

          .sign-up-main__address__block-num
            = form.label '番地', class: :'sign-up-main__address__block-num__head'
            = form.label '必須', class: :'sign-up-main__address__block-num__require'
            = form.text_field :block_number, placeholder: '例)青山1-1-1', class: :'sign-up-main__address__block-num__form'

          .sign-up-main__address__building-name
            = form.label '建物名', class: :'sign-up-main__address__building-name__head'
            = form.label '任意', class: :'sign-up-main__address__building-name__optional'
            = form.text_field :building_name, placeholder: '例) 横浜ビル', class: :'sign-up-main__address__building-name__form'

          .sign-up-main__address__home-phone-num
            = form.label '電話', class: :'sign-up-main__address__home-phone-num__head'
            = form.label '任意', class: :'sign-up-main__address__home-phone-num__optional'
            = form.text_field :homephone_number, placeholder: '0123456789', class: :'sign-up-main__address__home-phone-num__form'

          = form.submit '次に進む', class: :'sign-up-main__address__submit-btn'
          
          

    .devise-footer
      %nav
        %ul.devise-footer__box
          %li
            =link_to 'プライバシーポリシー', 'https://www.mercari.com/jp/privacy/'
          %li
            =link_to 'メルカリ利用規約', 'https://www.mercari.com/jp/tos/'
          %li
            =link_to'特定商取引に関する表記','https://www.mercari.com/jp/tokutei/'
      .devise-footer__logo
        =link_to'https://www.mercari.com/jp/' do
          = image_tag'//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?570108281', class:'bottom-logo'
      %p.devise-footer__text 
        %small &copy; 2019 Mercari
