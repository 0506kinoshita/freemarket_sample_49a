.devise-wrapper
  .devise-container
    .devise-container-info__header
      =link_to 'https://www.mercari.com/jp/' do
        = image_tag '//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?570108281', class:'devise-container__header__logo'
    
    %nav.progress
      %ul.progress--clearfix
        %li.active#red-1
          会員情報
          .progress-status-1
        %li.number
          電話番号認証
          .progress-status-1
        %li.address
          お届け先住所入力
          .progress-status-1
        %li.pay
          支払い方法
          .progress-status-1
        %li.finish
          完了
          .progress-status-1

    .member-info-main
      .member-info-main__upper
        .member-info-main__upper__text 会員情報入力

        .sign-up-center
          .sign-up-center__content
            = form_with model: @user, url: '/users', method: :post, local: true do |form|
              .sign-up-center__content__form
                = form.label 'ニックネーム', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.text_field :nickname ,placeholder: :'例) メルカリ太郎',value: '' ,class: :'sign-up-center__content__form__input'
                
              .sign-up-center__content__form
                = form.label 'メールアドレス', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.email_field :email ,placeholder: :'PC・携帯どちらでも可',value: '' ,class: :'sign-up-center__content__form__input'
            
              .sign-up-center__content__form
                = form.label 'パスワード', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.password_field :password ,placeholder: :'6文字以上',value: '' ,class: :'sign-up-center__content__form__input'

              .sign-up-center__content__form
                = form.label 'パスワード(確認)', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.password_field :password_confirmation ,placeholder: :'6文字以上',value: '' ,class: :'sign-up-center__content__form__input'
          
              .sign-up-center__content__form
                .sign-up-center__content__form__text  本人確認
                .sign-up-center__content__form__simple  安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。

              .sign-up-center__content__form
                = form.label '姓 (全角)', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.text_field :last_name ,placeholder: :'例) 山田',value: '' ,class: :'sign-up-center__content__form__input'

              .sign-up-center__content__form
                = form.label '名 (全角)', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.text_field :first_name ,placeholder: :'例) 彩',value: '' ,class: :'sign-up-center__content__form__input'

              .sign-up-center__content__form
                = form.label '姓カナ (全角)', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.text_field :last_name_kana ,placeholder: :'例) ヤマダ',value: '' ,class: :'sign-up-center__content__form__input'

              .sign-up-center__content__form
                = form.label '名カナ (全角)', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'
                = form.text_field :first_name_kana ,placeholder: :'例) アヤ',value: '' ,class: :'sign-up-center__content__form__input'

              .sign-up-center__content__form
                = form.label '生年月日', class: :'sign-up-center__content__form__label'
                = form.label '必須', class: :'sign-up-center__content__form__must'

                .birth-select-box
                  .birth-select-box__contents
                  = form.select :birth_year, options_for_select((1900...2020)),{}, {class: 'birth-select-box__contents__field'}
                  = fa_icon("chevron-down birth-select-box__contents__image")
                  %span 年
                
                  .birth-select-box__contents
                  = form.select :birth_month, options_for_select((01...13)),{}, {class: 'birth-select-box__contents__field'}
                  = fa_icon("chevron-down birth-select-box__contents__image")
                  %span 月
                
                  .birth-select-box__contents
                  = form.select :birth_day, options_for_select((01...32)),{}, {class: 'birth-select-box__contents__field'}
                  = fa_icon("chevron-down birth-select-box__contents__image")
                  %span 日

                .sign-up-center__content__form__alert  ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。

              .sign-up-center__content__form
                %input.sign-up-center__content__form__input{type:'hidden',value:'',name:'after_save_callback'}
                .form-member.login-captcha{data:{sitekey:''}}
                  = image_tag '認証.png',class:'robo'
            
              .sign-up-center__content__form
                .sign-up-center__content__form__alert 
                  = surround '「次へ進む」のボタンを押すことにより、','に同意したものとみなします' do
                    =link_to'利用規約', '' 
                = form.submit '次へ進む', class: :'sign-up-center__content__form__next'

                .sign-up-center__content__form__bottom-right
                  =link_to '本人情報の登録について',''
                  %i.icon-arrow-right

      .devise-footer
        %nav
          %ul.devise-footer__box
            %li
              =link_to 'プライバシーポリシー', 'https://www.mercari.com/jp/privacy/'
            %li
              =link_to 'メルカリ利用規約', 'https://www.mercari.com/jp/tos/'
            %li
              =link_to'特定商取引に関する表記','https://www.mercari.com/jp/tokutei/'
        .devise-footer__logo
          =link_to'https://www.mercari.com/jp/' do
            = image_tag'//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?570108281', class:'bottom-logo'
        %p.devise-footer__text 
          %small &copy; 2019 Mercari
